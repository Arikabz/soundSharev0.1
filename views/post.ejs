<%- include('partials/header') -%>
<div id="wrapper">
    <div id='main'>
        <header class="row aln-left">
            <a class="button next box off-1 col-1" href="/feed">Feed</a>
        </header>
        <div class="inner">
            <section>
                    <div class="box alt">
                        <div class='row gtr uniform'>
                            <div class='col-7'>
                                <span class='image fit'>
                                    <img src="<%= post.image%>" />
                                </span>
                            </div>
                        <div class=' col-5 row'>
                            <h2 class='col-12'><%= post.title %></h2>
                            <span>
                                <strong>
                                    <a href='/profile/<%=post.user%>'><%=post.userName%>:</a>
                                </strong>
                            </span>
                            <p col-3><%= post.caption %></p>
                            <h3 class="col-12">Likes: <%= post.likes %></h3>
                            <form
                            class="col-5"
                            action="/post/likePost/<%= post.id %>?_method=PUT"
                            method="POST"
                            >
                                <button class="button fa fa-heart" type="submit"></button>
                            </form>
                            <%if(post.user == user.id){ %>
                                <form
                                    action="/post/deletePost/<%= post.id %>?_method=DELETE"
                                    method="POST"
                                    class="col-5"
                                    >
                                    <button class="button next fa fa-trash" type="submit"></button>
                                </form>
                            <%}%>
                            <%- include('comment', {comments}); %>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>
